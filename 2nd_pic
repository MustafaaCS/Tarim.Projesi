#include <16F877A.h>  //16F877A KUTUPHANESINI EKLEDIIM
#fuses xt,nowdt,noprotect,nobrownout,nolvp,noput,nowrt,nodebug,nocpd   //DENETLEYICI KONFIGRASYON AYARLARINI YAPTIM                
#use delay(clock = 8000000) //GECIKME FONKSIYONU ICIN KULLANILICAK OSILATOR FREKANSINI AYARLADIM
#use rs232(baud=9600,xmit=pin_d0,rcv=pin_d1,parity=N,stop=1)  // RS232 protokolünün 9600 BIT/S BAUD HIZINDA OLACAGINI  PARITY BITININ OLMADIGINI AYARLADIM

char gunaa[5]; //GUN DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
char aya[5];  //AYA DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
char yila[5]; //YILA DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
char tariha[5]; //TARIH DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
char saata[5]; //SAAT DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
char dakikaa[5]; //DAKIKA DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
char buttonc;  //BUTTON DEGISKENIMI KAYDEDECEGIM DEGISKENIMI TANIMLADIM
int gun=05; //GUN BILGIMI GIRDIM
int ay=01; //AY BILGIMI GIRDIM
int yil=21; //YIL BILGIMI GIRDIM
int tarih=3; //TARIH BILGIMI GIRDIM
int saat=07; //SAAT BILGIMI GIRDIM
int dakika=59;  //DAKIKA BILGIMI GIRDIM

int main (void){   //MAIN FONKSIYONUMU TANIMLADIM
    sprintf(gunaa,"%d",gun); //GUN BILGISINI GUNAA DEGISKENIME KAYDETTIM
    sprintf(aya,"%d",ay); //AY BILGISINI AYA DEGISKENIME KAYDETTIM
    sprintf(yila,"%d",yil); //YIL BILGISINI YILA DEGISKENIME KAYDETTIM
    sprintf(tariha,"%d",tarih); //TARIH BILGISINI TARIHA DEGISKENIME KAYDETTIM
    sprintf(saata,"%d",saat); //SAAT BILGISINI SAATA DEGISKENIME KAYDETTIM
    sprintf(dakikaa,"%d",dakika); //DAKIKA BILGISINI DAKIKAA DEGISKENIME KAYDETTIM
    delay_ms(500);  //500 MS BEKLEDIM
   puts(gunaa); //GUNA DEGISKENIMI YOLLADIM
    delay_ms(500); //500 MS BEKLEDIM
   puts(aya); //AYA DEGISKENIMI YOLLADIM
    delay_ms(500); //500 MS BEKLEDIM
   puts(yila); //YILA DEGISKENIMI YOLLADIM
    delay_ms(500); //500 MS BEKLEDIM
   puts(tariha); //TARIHA DEGISKENIMI YOLLADIM
    delay_ms(500); //500 MS BEKLEDIM
   puts(saata); //SAATA DEGISKENIMI YOLLADIM
    delay_ms(500); //500 MS BEKLEDIM
   puts(dakikaa); //DAKIKAA DEGISKENIMI YOLLADIM
    delay_ms(500); //500 MS BEKLEDIM
    output_float(PIN_C5);   //C5 PINININ GIRIS PINI OLDUGUNU TANIMLADIM
    while(true){ //SONSUZ DONGUMU KURDUM
      if(input(PIN_C5) == 1){ //C5 PINI 1 OLDUGUNDA A DEGERINI GONDERDIM
    if(input(PIN_C5) == 1){ //C5 PINI 1 OLDUGUNDA A DEGERINI GONDERDIM
       putc('a'); //A DEGISKENIMI YOLLADIM
        delay_ms(500);}}  //500 MS BEKLEDIM
      if(input(PIN_C5) == 0){ //C5 PINI 0 OLDUGUNDA K DEGERINI GONDERDIM
    if(input(PIN_C5) == 0){ //C5 PINI 0 OLDUGUNDA K DEGERINI GONDERDIM
       putc('k'); //C5 PINI 0 OLDUGUNDA K DEGERINI GONDERDIM
        delay_ms(500);}}  //500 MS BEKLEDIM
 }
 }
